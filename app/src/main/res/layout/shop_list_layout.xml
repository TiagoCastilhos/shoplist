<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shopListLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/shopListIdView"
            app:layout_constraintLeft_toLeftOf="@+id/shopListLayout"
            android:layout_height="match_parent"
            android:layout_width="30dp"
            android:text="Id"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            app:layout_constraintLeft_toRightOf="@id/shopListIdView"
            android:layout_marginLeft="20dp"
            android:id="@+id/shopListNameView"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:text="Name"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_delete_24"
            app:layout_constraintRight_toRightOf="@id/shopListLayout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>